#!/usr/bin/env php
<?php
declare(strict_types = 1);

require __DIR__ . '/../vendor/autoload.php';

use Recoil\Dev\InstrumentedStream;

InstrumentedStream::install();

$source = __DIR__ . '/test.php';
$target = $source . '.instrumented';

file_put_contents(
    $target,
    file_get_contents(InstrumentedStream::PREFIX . $source)
);

system("diff -u '$source' '$target'");
